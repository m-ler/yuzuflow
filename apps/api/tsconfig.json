{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@shared": [
				"./../../packages/shared"
			]
		}
	},
	"include": [
		"./src/**/*"
	],
	"ts-node": {
		"esm": true
	},
}