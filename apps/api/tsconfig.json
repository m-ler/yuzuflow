{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": [
				"./*"
			],
			"@shared/*": [
				"../../../packages/shared/*"
			],
		},
	},
	"include": [
		"./src/**/*",
		"../../packages/shared/**/*",
	],
	"ts-node": {
		"esm": true
	},
}